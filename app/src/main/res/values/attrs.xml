<resources>

    <declare-styleable name="colors">
        <!-- Color for foreground elements like cards, ListView items or menus-->
        <attr name="colorForeground" format="color" />
        <!-- Color for the layout background-->
        <attr name="colorBackground" format="color" />
        <!-- Color for primary Buttons-->
        <attr name="colorPrimary" format="color" />
        <!-- Color for secondary Buttons-->
        <attr name="colorPrimaryVariant" format="color" />
        <attr name="colorOnPrimary" format="color" />

        <item name="colorSecondary">@color/secondary_light</item>
        <item name="colorSecondaryVariant">@color/secondary_light</item>
        <!-- Color for primary texts-->
        <attr name="textColorPrimary" format="color" />
        <attr name="textColorSecondary" format="color" />
    </declare-styleable>

    <declare-styleable name="drawables">
        <attr name="edit_text_background" format="reference" />
        <attr name="big_gradient_rounded_corner" format="reference" />
    </declare-styleable>
</resources>