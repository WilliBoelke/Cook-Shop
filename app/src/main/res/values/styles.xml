<resources>



    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="backgroundColor">@color/background_light</item>
        <item name="colorForeground">@color/foreground_light</item>

        <item name="colorPrimary">@color/primary_light</item>
        <item name="colorPrimaryVariant">@color/primary_light</item>
        <item name="colorOnPrimary">@color/primary_light</item>
        <item name="colorSecondary">@color/secondary_light</item>
        <item name="colorSecondaryVariant">@color/secondary_light</item>

        <item name="textColorPrimary">@color/text_light</item>
        <item name="textColorSecondary">@color/text_light</item>


        <item name="edit_text_background">@drawable/edit_text_background_white</item>
    </style>

    <!-- Light/Day theme. -->
    <style name="LightTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="backgroundColor">@color/background_light</item>
        <item name="colorForeground">@color/foreground_light</item>

        <item name="colorPrimary">@color/primary_light</item>
        <item name="colorPrimaryVariant">@color/primary_light</item>
        <item name="colorOnPrimary">@color/primary_light</item>
        <item name="colorSecondary">@color/secondary_light</item>
        <item name="colorSecondaryVariant">@color/secondary_light</item>

        <item name="textColorPrimary">@color/text_light</item>
        <item name="textColorSecondary">@color/text_light</item>

        <item name="edit_text_background">@drawable/edit_text_background_white</item>

    </style>

    <!-- Dark/Night theme. -->
    <style name="DarkTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="backgroundColor">@color/background_dark</item>
        <item name="colorForeground">#3C3C3C</item>

        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/primary_dark</item>
        <item name="colorSecondary">@color/secondary_dark</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>

        <item name="textColorPrimary">@color/text_dark</item>
        <item name="textColorSecondary">#F1A5A5A5</item>

        <item name="edit_text_background">@drawable/edit_text_background_black</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="backgroundColor">@color/secondary_dark</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="LilahTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="backgroundColor">#D5A7DD</item>
        <item name="colorForeground">#D27FE1</item>

        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/primary_dark</item>
        <item name="colorSecondary">@color/secondary_dark</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>

        <item name="textColorPrimary">#F1100D0D</item>
        <item name="textColorSecondary">#F1302B2B</item>

        <item name="edit_text_background">@drawable/edit_text_background_black</item>
    </style>

</resources>