<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:clickable="true"
    app:cardCornerRadius="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/foreground_dark"
        android:clickable="false"
        android:focusable="false"
        android:foreground="?android:attr/selectableItemBackground">


        <ImageView
            android:id="@+id/article_image"
            android:layout_width="77dp"
            android:layout_height="0dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/article_name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="TextView"

            app:layout_constraintStart_toEndOf="@+id/article_image"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="@dimen/header2_font_size"
            android:textColor="@color/text_primary_dark"
            android:fontFamily="@font/app_font"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/article_amount_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/article_image"
            android:textSize="@dimen/text_secondary_font_size"
            android:textColor="@color/text_secondary_dark"
            android:fontFamily="@font/app_font"
            android:textStyle="normal"
            app:layout_constraintTop_toBottomOf="@+id/article_name_textview" />

        <TextView
            android:id="@+id/article_weight_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="@dimen/text_secondary_font_size"
            android:textColor="@color/text_secondary_dark"
            android:fontFamily="@font/app_font"
            android:textStyle="normal"
            app:layout_constraintStart_toEndOf="@+id/article_amount_textview"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>